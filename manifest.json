{
	"manifest_version": 2,
	"name": "Readnow",
	"description": "Tries to make the body text on a page more readable",
	"version": "1.0",
	"commands": {
		"make-readable": {
			"suggested_key": {
				"default": "Ctrl+Shift+E",
				"mac": "MacCtrl+Shift+E"
			},
			"description": "Make body text readable"
		}
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["readnow.js"]
		}
	],
	"background": {
		"persistent": false,
		"scripts": ["background.js"]
	},
	"permissions": [
		"activeTab"
	]
}
